<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserDashboardActivity"
    android:background="#2196F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo và tên ứng dụng -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TLU NAVIGATOR"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- Tìm kiếm -->
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tìm tòa nhà, phòng học, dịch vụ,..."
            android:background="@drawable/info_background"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:textColor="@android:color/black"
            android:textColorHint="#AAAAAA" />

        <!-- Các nút chức năng -->

        <!-- GPA -->

        <GridLayout
            android:id="@+id/gridDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginTop="16dp">

            <!-- Nút 1: Thông tin -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/info_background"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/btnInfo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/info_background"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/btnSubject"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Môn học"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/info_background"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/btnDocs"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài liệu"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Nút 4: Tiến độ -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/info_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btnProgress"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tiến độ"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp"  />
            </LinearLayout>

            <!-- Nút 5: Học lại -->
            <LinearLayout
                android:background="@drawable/info_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/btnRetake"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Học lại"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Nút 6: Kết quả -->
            <LinearLayout
                android:background="@drawable/info_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/btnResult"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Kết quả"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:background="@drawable/info_background"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtGPA"
                android:text="BẠN ĐÃ ĐẠT ĐƯỢC .../4 GPA"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="23dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:tint="@color/blue"
                android:src="@drawable/ic_check"
                android:layout_gravity="center"
                android:layout_width="74dp"
                android:layout_height="74dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
