<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubjectToProgramActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <AutoCompleteTextView
            android:background="@drawable/info_background"
            android:id="@+id/autoCompleteSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chọn môn học"
            />

        <RadioGroup
            android:layout_marginTop="15dp"
            android:background="@drawable/info_background"
            android:id="@+id/rgType"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/rbRequired"
                android:text="Bắt buộc" />
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/rbElective"
                android:text="Tự chọn" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center"
            android:background="@drawable/btn_login"
            android:backgroundTint="@color/green"
            android:layout_marginTop="015dp"
            android:id="@+id/btnAddSubject"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Lưu lại" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>